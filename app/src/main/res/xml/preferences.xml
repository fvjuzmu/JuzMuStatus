<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
                android:title="Automatic refresh">
                <CheckBoxPreference
                        android:title="Automatic refresh"
                        android:defaultValue="true"
                        android:summary="Refresh status automatically"
                        android:key="autoRefresh" />
		<ListPreference
                        android:title="Refresh interval"
                        android:key="refreshInterval"
                        android:defaultValue="900000"
                        android:entries="@array/intervalTitles"
                        android:entryValues="@array/intervalValues" />
        </PreferenceCategory>
